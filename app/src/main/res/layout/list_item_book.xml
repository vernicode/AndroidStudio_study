<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_book_readed_check_box"
            android:layout_alignParentRight="true"
            android:padding="4dp">
        </CheckBox>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_book_title_text_view"
            android:layout_toLeftOf="@id/list_item_book_readed_check_box"
            android:textStyle="bold"
            android:padding="4dp"
            tools:text="Заголовок книги">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_book_date_text_view"
            android:layout_toLeftOf="@id/list_item_book_readed_check_box"
            tools:text="Дата прочтения книги"
            android:layout_below="@+id/list_item_book_title_text_view"></TextView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>